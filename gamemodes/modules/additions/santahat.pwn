#include <YSI_Coding\y_hooks>

// ========================================================================== //
//                       <section> Definicije </section>                      //
// ========================================================================== //





// ========================================================================== //
//                       <section> Enumeratori </section>                     //
// ========================================================================== //





// ========================================================================== //
//                      <section> Promenljive </section>                      //
// ========================================================================== //
new bool:pSantaHat[MAX_PLAYERS char];




// ========================================================================== //
//                       <section> Callback-ovi </section>                    //
// ========================================================================== //
hook OnPlayerConnect(playerid)
{
    pSantaHat{playerid} = false;
}




// ========================================================================== //
//                        <section> Funkcije </section>                       //
// ========================================================================== //





// ========================================================================== //
//                          <section> MySQL </section>                        //
// ========================================================================== //





// ========================================================================== //
//                        <section> Dijalozi </section>                       //
// ========================================================================== //





// ========================================================================== //
//                         <section> Komande </section>                       //
// ========================================================================== //
CMD:kapa(playerid, const params[])
{
    pSantaHat{playerid} = !pSantaHat{playerid};

    if (pSantaHat{playerid} == true)
    {    
        SetPlayerAttachedObject(playerid, SLOT_SANTAHAT, 19065, 2, 0.120000, 0.040000, -0.003500, 0, 100, 100, 1.4, 1.4, 1.4);
        SendClientMessage(playerid, BELA, "* Stavili ste novogodisnju kapu.");
    }
    else
    {
        RemovePlayerAttachedObject(playerid, SLOT_SANTAHAT);
        SendClientMessage(playerid, BELA, "* Uklonili ste novogodisnju kapu.");
    }
    return 1;
}